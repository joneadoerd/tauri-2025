{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:default",
    "fs:allow-mkdir",
    "fs:allow-write",
    "fs:allow-read",
    "opener:default",
    "store:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "identifier": "logs-appdata-logs", "path": "$APPLOCALDATA/logs/*" },
        { "path": "$APPLOCALDATA/*" }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        { "identifier": "logs-appdata-logs", "path": "$APPLOCALDATA/logs/*" },
        { "path": "$APPLOCALDATA/*" }
      ]
    }
  ]
}
